//-------------------------------------------------------------------------
PCBillingStart =
IF (
    DAY ( TODAY () ) >= 26
        && DAY ( TODAY () ) <= 31,
    DATEVALUE (
        CONVERT ( MONTH ( TODAY () ), STRING ) & "/"
            & CONVERT ( 26, STRING ) & "/"
            & CONVERT ( YEAR ( TODAY () ), STRING )
    ),
    IF (
        DAY ( TODAY () ) >= 1
            && DAY ( TODAY () ) <= 25
            && MONTH ( TODAY () ) <> 1,
        DATEVALUE (
            CONVERT ( MONTH ( TODAY () ) - 1, STRING ) & "/"
                & CONVERT ( 26, STRING ) & "/"
                & CONVERT ( YEAR ( TODAY () ), STRING )
        ),
        DATEVALUE (
            CONVERT ( 12, STRING ) & "/"
                & CONVERT ( 26, STRING ) & "/"
                & CONVERT ( YEAR ( TODAY () ) - 1, STRING )
        )
    )
)

