//-------------------------------------------------------------------------
PCBillingEnd =
IF (
    DAY ( TODAY () ) >= 1
        && DAY ( TODAY () ) <= 25,
    DATEVALUE (
        CONVERT ( MONTH ( TODAY () ), STRING ) & "/"
            & CONVERT ( 25, STRING ) & "/"
            & CONVERT ( YEAR ( TODAY () ), STRING )
    ),
    IF (
        DAY ( TODAY () ) >= 26
            && DAY ( TODAY () ) <= 31
            && MONTH ( TODAY () ) <> 12,
        DATEVALUE (
            CONVERT ( MONTH ( TODAY () ) + 1, STRING ) & "/"
                & CONVERT ( 25, STRING ) & "/"
                & CONVERT ( YEAR ( TODAY () ), STRING )
        ),
        DATEVALUE (
            CONVERT ( 1, STRING ) & "/"
                & CONVERT ( 25, STRING ) & "/"
                & CONVERT ( YEAR ( TODAY () ) + 1, STRING )
        )
    )
)

